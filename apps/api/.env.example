# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=matchback
DATABASE_PASSWORD=matchback_dev_password
DATABASE_NAME=matchback_db
DATABASE_URL=postgresql://matchback:matchback_dev_password@localhost:5432/matchback_db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# Email Configuration (Resend)
RESEND_API_KEY=re_your_resend_api_key_here
EMAIL_DOMAIN=matchbacktool.com
EMAIL_FROM=noreply@matchbacktool.com

# File Storage (Cloudflare R2)
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=matchback-files
R2_PUBLIC_URL=https://your-bucket.r2.cloudflarestorage.com

# Application Configuration
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3001

# Security
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRATION=7d

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# File Upload Limits
MAX_FILE_SIZE=52428800
# 50MB in bytes

# Logging
LOG_LEVEL=debug
